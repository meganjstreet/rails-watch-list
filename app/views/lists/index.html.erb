<div class="banner mb-4">
<h1>Keep track of your movie lists</h1>
</div>


<div class="container">

  <div class="list-head">
    <h2>My Lists</h2>
  </div>


  <div class="row mt-4">
    <% @lists.each do |list|%>
      <div class="col-4">
        <div class="card-list mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= list.img_url %>')">
          <%= link_to list.name, list_path(list) %>
          <%= link_to list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "card-remove-link" do %>
          <i class="fa-solid fa-xmark"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row mt-5">
    <h3>Add a list</h3>
      <%= render "form", list: @list %>
    </div>
</div>
