<div class="banner mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= @list.img_url %>')">
  <h1><%= @list.name %></h1>
</div>

<div class="container justify-content-center p-3">
  <div class="row mb-3">
    <% @bookmarks.each do |bookmark| %>
    <div class="col-4 d-flex align-items-stretch">
      <div class="card mb-3">
      <%= image_tag bookmark.movie.poster_url, alt: "movie poster", class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <p class="card-content"><%= bookmark.movie.overview %></p>
      </div>
      <div class="card-footer">
      <span>
      <i class="fa-solid fa-quote-left"></i> <%= bookmark.comment %>
      </span>
      <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: "delete", turbo_confirm: "Are you sure?"} %>
      </div>
      </div>
    </div>
    <% end %>
  </div>
<div class="row mb-3">
<h2>Add a movie</h2>
<%= render "bookmarks/form", bookmark: @bookmark, list: @list %>
</div>

</div>
